{% assign sings = section.settings %}
{{ 'sctn-atf-breakdown.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .atf-breakdown-{{ section.id }}{
    background:url({{ sings.bg_img | image_url }}) center top no-repeat;
    background-size:cover;
  }  
  .atf-breakdown-{{ section.id }} h1,
  .atf-breakdown-{{ section.id }} h2,
  .atf-breakdown-{{ section.id }} p{
    color:{{ sings.copy_color }};
  }
{%- endstyle -%}
<div class="atf-wrp atf-breakdown-{{ section.id }}">
  <div class="content-wrp">
    <div class="header-wrp">
      <h1>{{ sings.title }}</h1>
      <p>{{ sings.header_desc }}</p>
      <img src="{{sings.icon_image}}" alt="{{sings.title}} title" class="icon-image">
    </div>
    <div class="breakdown-wrp">
      <div class="breakdown-title">{{ sings.breakdown_title }}</div>
      <div class="breakdown-items">
        {% for block in section.blocks %}
          {% assign bings = block.settings %}
          <div class="breakdown-item item-{{ block }}">
            <img src="{{ bings.ingredient_image }}" alt="{{ bings.ingredient_title }}">
            <h2>{{ bings.ingredient_title }}</h2>
            <p>{{ bings.ingredient_copy }}</p>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "ATF - Breakdown",
  "tag": "section",
  "class": "section atf-breakdown",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_img",
      "label": "Background Image"
    },
    {
      "type": "header",
      "content": "Header Section"
    },
    {
      "type": "color",
      "id": "copy_color",
      "label": "Copy Color",
      "default":"#065142"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Header Title"
    },
    {
      "type": "richtext",
      "id": "header_desc",
      "label": "Header Copy"
    },
    {
      "type": "image_picker",
      "id": "icon_image",
      "label": "Icon Image"
    },
    {
      "type": "header",
      "content": "Breakdown info"
    },
    {
      "type": "text",
      "id": "breakdown_title",
      "label": "Breakdown Title",
      "default": "Our Material Breakdown"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Ingredients",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "ingredient_image",
          "label": "Ingredient image"
        },
        {
          "type": "text",
          "id": "ingredient_title",
          "label": "Ingredient Title"
        },
        {
          "type": "text",
          "id": "ingredient_copy",
          "label": "Ingredient Copy"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "ATF - Breakdown"
    }
  ]
}
{% endschema %}