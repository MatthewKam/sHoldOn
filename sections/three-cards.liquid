{% assign sings = section.settings %}
{%- style -%}
  .three-cards-{{ section.id }}{
    background-color:{{ sings.bg_color }};
    padding:100px 20px;
    color:{{ sings.text_color }};
  }
  .three-cards-{{ section.id }} .three-cards-header {
    max-width: 550px;
    margin: 0 auto;
    padding: 0 20px;
    text-align: center;
  }
  .three-cards-{{ section.id }} .three-cards-header h1 {
    font-size:35px;
    text-transform:uppercase;
    margin-bottom:10px;
    letter-spacing:0;
    line-height:1;
  }
  .three-cards-{{ section.id }} .cards-wrp{
    display:flex;
    justify-content:center;
    align-items:flex-start;
    flex-wrap:wrap;
  }
  .three-cards-{{ section.id }} .three-cards-header .cards-copy{
    margin-bottom:40px;
  }
  .three-cards-{{ section.id }} .three-cards-header .cards-copy p,
  .three-cards-{{ section.id }} .three-cards-header .cards-copy span,
  .three-cards-{{ section.id }} .three-cards-header .cards-copy strong,{
    font-size:16px;
    line-height: 1.4;
  }
  @media screen and (min-width: 640px) {
    .three-cards-{{ section.id }} .three-cards-header h1 {
      font-size:50px;
      margin-bottom:20px;
    }
    .three-cards-{{ section.id }} .three-cards-header .cards-copy{
      margin-bottom:50px;
    }
    .three-cards-{{ section.id }} .three-cards-header .cards-copy p,
    .three-cards-{{ section.id }} .three-cards-header .cards-copy span,
    .three-cards-{{ section.id }} .three-cards-header .cards-copy strong,{
      font-size:20px;
    }
  }
{%- endstyle -%}
<div class="three-cards-wrp three-cards-{{ section.id }}">
  <div class="three-cards">
    <div class="three-cards-header">
      <h1>{{ sings.header_title }}</h1>
      <div class="cards-copy">{{ sings.header_copy }}</div>
    </div>
    <div class="cards-wrp">
      {%- for block in section.blocks -%}
        {% assign bings = block.settings %}
        <div class="cards" style="background-color:{{ bings.card_color }}; color:{{ bings.card_text_color }}">
          <div class="card-img-wrp">
            <img src="{{ bings.card_image | image_url }}" alt="{{ bings.card_title }}">
          </div>
          <div class="card-info-wrp">{{ bings.card_copy }}</div>
          <a href="{{ bings.card_url }}">{{bings.card_link_text}}</a>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Three Cards",
  "tag": "section",
  "class": "section three-cards",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default":"#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default":"#065142"
    },
    {
      "type": "text",
      "id": "header_title",
      "label": "Section Title"
    },
    {
      "type": "richtext",
      "id": "header_copy",
      "label": "Section Copy"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Cards",
      "limit": 3,
      "settings": [
        {
          "type": "color",
          "id": "card_color",
          "label": "Card Color",
          "default":"#F8F0DC"
        },
        {
          "type": "image_picker",
          "id": "card_image",
          "label": "Icon Image"
        },
        {
          "type": "color",
          "id": "card_text_color",
          "label": "Card Text Color",
          "default":"#065142"
        },
        {
          "type": "text",
          "id": "card_title",
          "label": "Card Title"
        },
        {
          "type": "text",
          "id": "card_copy",
          "label": "Card Copy"
        },
        {
          "type": "text",
          "id": "card_link_text",
          "label": "Card Link Text"
        },
        {
          "type": "url",
          "id": "card_url",
          "label": "Card URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Three Cards"
    }
  ]
}
{% endschema %}