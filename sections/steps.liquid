{% assign sings = section.settings %}
{%- style -%}
  .steps-{{ section.id }} h1,
  .steps-{{ section.id }} h2,
  .steps-{{ section.id }} p,
  .steps-{{ section.id }} strong,
  .steps-{{ section.id }} span{
    letter-spacing:0;
    line-height:1;
  }
  .steps-{{ section.id }} p,
  .steps-{{ section.id }} strong,
  .steps-{{ section.id }} span{
    line-height:1.4;
  }
  .steps-{{ section.id }}{
    background-color:{{ sings.bg_color }};
    padding:50px 20px;
  }
  .steps-{{ section.id }} .steps-header{
    color:{{ sings.text_color }};
    max-width:335px;
    margin:0 auto;
    margin-bottom:40px;
    text-align: center;
  }
  .steps-{{ section.id }} .steps-header h1{
    font-size:35px;
    text-transform: uppercase;
    margin-bottom:15px;
  }
  .steps-{{ section.id }} .steps-header img{
    width:100%;
    margin-bottom:20px;
  }
  .steps-{{ section.id }} .steps{
    width:90%;
    max-width:800px;
    margin:0 auto;
    border-top:4px solid #065142;
    padding-top:40px;
  }
  .steps-{{ section.id }} .step{
    padding: 0 20px;
    margin-bottom: 20px;
    display: flex;
    flex-direction: row;
  }
  .steps-{{ section.id }} .step h2{
    width:50px;
    font-size:50px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .steps-{{ section.id }} .step .step-info{
    flex: 1;
  }
  .steps-{{ section.id }} .step .step-info p strong{
    font-family:'Korolev-Heavy';
  }
  @media screen and (min-width: 640px) {
    .steps-{{ section.id }} .steps-header{
      max-width:560px;
      margin:0 auto;
      margin-bottom:60px;
    }
    .steps-{{ section.id }} .steps-header h1{
      font-size:70px;
      margin-bottom:20px;
    }
    .steps-{{ section.id }} .steps-header img{
      margin-bottom:0px;
    }
    .steps-{{ section.id }} .steps{
      padding-top:60px;
    }
    .steps-{{ section.id }} .step h2{
      width:65px;
      font-size:65px;
    }
  }
{%- endstyle -%}
<div class="steps-wrp steps-{{ section.id }}">
  <div class="steps-container">
    <div class="steps-header">
      <img src="{{ sings.header_image | image_url }}" alt="">
      <h1>{{ sings.header_title }}</h1>
      <div class="steps-copy">{{ sings.header_copy }}</div>
    </div>
    <div class="steps">
      {%- for block in section.blocks -%}
        {% assign bings = block.settings %}
        {%- style -%}
          {% if bings.hide_desktop %}
            .steps-{{ section.id }} .hide_on_mbl{
              display:none;
            }
          {% endif %}
          @media screen and (min-width: 640px) {
            {% if bings.hide_mobile %}
              .steps-{{ section.id }} .hide_on_dsktp{
                display:none;
              }
            {% endif %}
          }
        {%- endstyle -%}
        <div class="step" style="color:{{ bings.step_color }};">
          <h2>{{ forloop.index | add: 1 }}</h2>
          <div class="step-info">
            <p><strong>{{ bings.step_title }}</strong> <span>{{ bings.step_copy }}</span></p>
            {% if bings.step_image_desktop %}
              <img src="{{ bings.step_image_desktop | image_url }}" class="hide_on_mbl" alt="">
            {% endif %}
            {% if bings.step_image_mobile %}
              <img src="{{ bings.step_image_mobile | image_url }}" class="hide_on_dsktp" alt="">
            {% endif %}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Steps",
  "tag": "section",
  "class": "section steps",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default":"#EFFCF6"
    },
    {
      "type": "image_picker",
      "id": "header_image",
      "label": "Header Image"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default":"#065142"
    },
    {
      "type": "text",
      "id": "header_title",
      "label": "Section Title"
    },
    {
      "type": "richtext",
      "id": "header_copy",
      "label": "Section Copy"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Steps",
      "limit": 5,
      "settings": [
        {
          "type": "color",
          "id": "step_color",
          "label": "Step Color",
          "default":"#065142"
        },
        {
          "type": "text",
          "id": "step_title",
          "label": "Step Title"
        },
        {
          "type": "text",
          "id": "step_copy",
          "label": "Step Copy"
        },
        {
          "type": "image_picker",
          "id": "step_image_mobile",
          "label": "Step Image Mobile"
        },
        {
          "type": "checkbox",
          "id": "hide_mobile",
          "label": "Hide Mobile Image on Desktop",
          "default": true
        },
        {
          "type": "image_picker",
          "id": "step_image_desktop",
          "label": "Step Image Desktop"
        },
        {
          "type": "checkbox",
          "id": "hide_desktop",
          "label": "Hide Desktop Image on Mobile",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Steps"
    }
  ]
}
{% endschema %}