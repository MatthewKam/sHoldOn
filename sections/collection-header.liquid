{% assign sings = section.settings %}

{%- style -%}

{%- endstyle -%}
<div class="collection-header-wrp">
  <div class="collection-header">
    <h1 class="collection-header-title">{{ sings.title }}</h1>
    {%- if sings.collection_description -%}
      <p class="collection-header-desc">
        {{ sings.collection_description }}
      </p>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Collection Title/Desc",
  "class": "section section-collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Collection title"
    },
    {
      "type": "text",
      "id": "collection_description",
      "label": "Collection description"
    }
  ],
  "templates":["collection"],
  "presets": [
    {
      "name": "Collection Title/Desc"
    }
  ]
}
{% endschema %}
