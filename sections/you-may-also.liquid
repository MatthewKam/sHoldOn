{% schema %}
{
  "name": "You May Also Like",
  "tag": "section",
  "class": "section section-collection section-you-may-also-items",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title"
    },
    {
      "type": "header",
      "content": "Marketing Card"
    },
    {
      "type": "image_picker",
      "id": "card_mobile",
      "label": "Mobile Card"
    },
    {
      "type": "image_picker",
      "id": "card_desktop",
      "label": "Desktop Card"
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "View All Link"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Product - YMAL",
      "limit": 4,
      "settings": [
        {
          "type": "product",
          "id": "ymal_product",
          "label": "Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "You May Also Like"
    }
  ]
}
{% endschema %}